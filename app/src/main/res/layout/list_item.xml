<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    android:orientation="vertical"
    android:background="@color/background_color">

    <ImageView
        android:src="@drawable/note"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_width="@dimen/pic_size"
        android:layout_height="@dimen/pic_size"
        android:id="@+id/note_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/note_pic"
        android:layout_toEndOf="@+id/note_pic"
        android:layout_alignBottom="@+id/note_pic"
        android:layout_alignTop="@+id/note_pic"
        android:gravity="center">

        <TextView
            android:textColor="@color/large_text_color"
            android:textSize="@dimen/small_text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Note Name"
            android:id="@+id/note_name" />

    </LinearLayout>

</RelativeLayout>